#: include ./ui/components/text.kv

<DrawingArea>:
    tool: app.statusbar_tool
    dotted_line: app.dotted_line
    color_fill: app.color_fill
    pen_color: app.pen_color

    
    MDLabel:
        canvas.before:
            Color:
                rgba: 0,0,0,.2
            Line:
                width: dp(.65)
                rounded_rectangle: root.pos[0], root.pos[1], root.size[0], root.size[1], 4

        on_touch_down: root.touch_down(args[1])
        on_touch_move: root.touch_move(args[1])
        on_touch_up: root.touch_up(args[1])


    